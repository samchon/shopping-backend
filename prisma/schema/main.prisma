datasource db {
  provider   = "postgresql"
  extensions = [pg_trgm]
}

generator client {
  provider        = "prisma-client"
  output          = "../../src/prisma"
  previewFeatures = ["postgresqlExtensions", "views"]
}

generator markdown {
  provider = "prisma-markdown"
  title    = "Shopping Mall"
  output   = "../../docs/ERD.md"
}
