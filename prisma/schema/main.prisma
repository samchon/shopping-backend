datasource db {
  provider   = "postgresql"
  url        = env("SHOPPING_POSTGRES_URL")
  extensions = [pg_trgm]
}

generator client {
  provider        = "prisma-client-js"
  engineType      = "client"
  previewFeatures = ["postgresqlExtensions", "views"]
}

generator markdown {
  provider = "prisma-markdown"
  title    = "Shopping Mall"
  output   = "../../docs/ERD.md"
}
